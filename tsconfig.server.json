{
  "extends": "./tsconfig.json",
  "ts-node": {
    // Needed to support path aliases (requires `npm i -D tsconfig-paths`)
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es2019"],
    "target": "es2019",
    "isolatedModules": false,
    "noEmit": false
  },
  "include": ["src/server/server.ts"]
}
